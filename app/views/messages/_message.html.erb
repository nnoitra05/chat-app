<div class="chat">
  <div class="upper-chat">
    <div class="chat-user">
      <%= message.user.name %>
    </div>
    <div class="chat-date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-chat">
    <div class="chat-content">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>